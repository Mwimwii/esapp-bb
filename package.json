{
  "name": "web",
  "version": "1.0.0",
  "_moduleDirectories": [
    "./dist"
  ],
  "scripts": {
    "start": "npm run build && concurrently \"tsc -p tsconfig.app.json -w\" \"supervisor -w ./dist,./config -e js,json,yml --no-restart-on error ./dist/index.js\"",
    "build": "foal rmdir dist && tsc -p tsconfig.app.json",
    "build:test": "foal rmdir dist && tsc -p tsconfig.test.json",
    "start:test": "mocha -r module-alias/register --file ./dist/test.js \"./dist/**/*.spec.js\"",
    "test": "npm run build:test && npm run start:test",
    "test:watch": "npm run build:test && concurrently \"tsc -p tsconfig.test.json -w\" \"mocha --file ./dist/test.js -w \\\"./dist/**/*.spec.js\\\"\"",
    "build:e2e": "foal rmdir dist && tsc -p tsconfig.e2e.json",
    "start:e2e": "mocha --timeout 4000 --file ./dist/e2e.js \"./dist/e2e/**/*.js\"",
    "e2e": "npm run build:e2e && concurrently \"tsc -p tsconfig.e2e.json -w\" \"mocha --file ./dist/e2e.js -w \\\"./dist/e2e/**/*.js\\\"\"",
    "migrate": "npx typeorm migration:run",
    "db:migration:create": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:create -n $1",
    "db:migration:generate": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:generate -n $1",
    "migrate:undo": "npx typeorm migration:revert",
    "db:seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "db:seed:run": "npm run build && ts-node ./node_modules/typeorm-seeding/dist/cli.js seed -n ormconfig.js -s $1",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --ext ts --fix src",
    "postinstall": "node-git-hooks",
    "generate:uml": "npm run build && typeorm-uml ormconfig.js --download docs/database-uml.png"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@foal/core": "^2.0.0",
    "@foal/jwt": "^2.5.0",
    "@foal/typeorm": "^2.0.0",
    "express": "4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "nodemailer": "^6.6.3",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "remove": "^0.1.5",
    "source-map-support": "~0.5.19",
    "typeorm": "^0.2.37",
    "typeorm-seeding": "^1.6.1",
    "typescript": "4.2.3"
  },
  "devDependencies": {
    "@foal/cli": "^2.5.0",
    "@foal/swagger": "^2.5.0",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "7.0.2",
    "@types/node": "^16.7.1",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "~2.7.0",
    "@typescript-eslint/parser": "~2.7.0",
    "concurrently": "^6.2.1",
    "eslint": "^7.11.0",
    "husky": "^7.0.2",
    "mocha": "~8.2.0",
    "node-git-hooks": "^1.0.6",
    "supertest": "~6.0.0",
    "supervisor": "~0.12.0",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typeorm-uml": "^1.6.4"
  }
}
