{
    "source": ["./design-tokens/properties/**/*.json"],
    "platforms": {
        "scss": {
            "transformGroup": "titlDefault",
            "buildPath": "./design-tokens/dist/",
            "files": [{
                "destination": "_titl-design-tokens.scss",
                "format": "scss/variables"
            }]
        },
        "css": {
            "transformGroup": "titlDefault",
            "buildPath": "./design-tokens/dist/",
            "files": [
                {
                    "format": "css/variables",
                    "destination": "titl-design-tokens.css"
                }
            ]
        },
        "json": {
            "transformGroup": "titlDefault",
            "buildPath": "./design-tokens/dist/",
            "files": [
                {
                    "format": "tailwindTokenObj",
                    "destination": "titl-design-tokens.js"
                }
            ]
        },
        "colorDocs": {
            "transformGroup": "titlDefault",
            "buildPath": "./design-tokens/docs/",
            "files": [
              {
                "destination": "color.md",
                "format": "markdownColor",
                "filter": {
                  "attributes": {
                    "category": "color"
                  }
                }
              }
            ]
        },
        "fontDocs": {
            "transformGroup": "titlDefault",
            "buildPath": "./design-tokens/docs/",
            "files": [
              {
                "destination": "font.md",
                "format": "markdownFont",
                "filter": {
                  "attributes": {
                    "category": "font"
                  }
                }
              }
            ]
          }
    }
}
